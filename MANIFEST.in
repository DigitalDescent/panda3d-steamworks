# Include all C++ source / headers needed for the build
recursive-include source/native *.cpp *.cxx *.cc *.c *.h *.hpp *.I *.in

# Python source files (copied into panda3d_steamworks/ at build time)
recursive-include source *.py

# CMake build system
include CMakeLists.txt
include additional_libs.cmake
include setup.py

# Build scripts
recursive-include scripts *.py

# Steamworks SDK headers and redistributable libraries
recursive-include thirdparty/steamworks/public *.h
recursive-include thirdparty/steamworks/redistributable_bin *.dll *.lib *.so *.dylib

# Docs
include README.md
include LICENSE
